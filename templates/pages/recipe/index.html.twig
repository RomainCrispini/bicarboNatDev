{% extends 'base.html.twig' %}

{% block title %}
	Recettes
{% endblock %}

{% block body %}
	<div class="container mt-4">
		{% if not recipes.items is same as([]) %}

			<h1>Mes recettes</h1>

			<a href="{{ path('recipe.create') }}" class="btn btn-primary">Ajouter une recette</a>

			<div class="count">
				<small>
					{{ recipes.getTotalItemCount }}
					recettes</small>
			</div>

			<table class="table table-primary mt-4">
				<thead>
					<tr>
						<th scope="col">Numéro</th>
						<th scope="col">Nom</th>
						<th scope="col">Prix</th>
						<th scope="col">Difficulté</th>
						<th scope="col">Date de création</th>
						<th scope="col">Modification</th>
						<th scope="col">Suppression</th>
					</tr>
				</thead>
				<tbody>
					{% for recipe in recipes %}
						<tr class="table-primary">
							<th scope="row">{{ recipe.id }}</th>
							<td>{{ recipe.name }}</td>
							<td>{{ recipe.price }}</td>
							<td>{{ recipe.difficulty }}</td>
							<td>{{ recipe.createdAt | date('d/m/Y') }}
								({{ recipe.createdAt | date('H:i:s') }})</td>
							<td>
								<a href="{{ path('ingredient.edit', { id: recipe.id }) }}" class="btn btn-info">TODO</a>
							</td>
							<td>
								<a href="{{ path('ingredient.delete', { id: recipe.id }) }}" class="btn btn-danger">TODO</a>
							</td>
						</tr>
					{% endfor %}

				</tbody>
			</table>

			<div class="d-flex justify-content-center mt-4">
				{{ knp_pagination_render(recipes) }}
			</div>

		{% else %}
			<h4>Il n'y a pas de recette</h4>
		{% endif %}
	</div>

{% endblock %}
