{% extends 'base.html.twig' %}

{% block title %}
	Ingrédients
{% endblock %}

{% block body %}
	<div class="container mt-4">
		{% if not ingredients.items is same as([]) %}

			<h1>Mes ingrédients</h1>

			<a href="{{ path('ingredient.new') }}" class="btn btn-primary">Ajouter un ingrédient</a>

			<div class="count">
				<small>
					{{ ingredients.getTotalItemCount }}
					ingrédients</small>
			</div>

			{% for message in app.flashes('success') %}
				<div class="alert alert-success mt-4">
					{{ message }}
				</div>
			{% endfor %}

			<table class="table table-primary mt-4">
				<thead>
					<tr>
						<th scope="col">Numéro</th>
						<th scope="col">Nom</th>
						<th scope="col">Prix</th>
						<th scope="col">Date de création</th>
					</tr>
				</thead>
				<tbody>
					{% for ingredient in ingredients %}
						<tr class="table-primary">
							<th scope="row">{{ ingredient.id }}</th>
							<td>{{ ingredient.name }}</td>
							<td>{{ ingredient.price }}</td>
							<td>{{ ingredient.createdAt| date('d/m/Y') }}
								({{ ingredient.createdAt| date('H:i:s') }})</td>
						</tr>
					{% endfor %}

				</tbody>
			</table>

			<div class="d-flex justify-content-center mt-4">
				{{ knp_pagination_render(ingredients) }}
			</div>

		{% else %}
			<h4>Il n'y a pas d'ingrédients</h4>
		{% endif %}
	</div>

{% endblock %}
